<%= javascript_pack_tag 'question-index' %>

<ul class="question-list">
    <% @questions.each do |question| %>
        <li>
            <%= link_to(question.title, question_path(question.id) ) %> <br>
            <small>Answered <%= pluralize(question.answers_count, "time") %> </small>
            •
            <small>Seen <%= pluralize(question.view_count, "time") %></small>
            •
            <small>Posted <%= time_ago_in_words(question.created_at) %></small>
        </li>
    <% end %>
</ul>